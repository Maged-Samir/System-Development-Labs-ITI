@using Day_01.Task04

<!DOCTYPE html>
<html>
<head>
    <title></title>
    @{
        List<Person> persons = new List<Person>()
        {
             new Person(){Id=5 ,Name="Maged",Salary=1500 },
             new Person(){Id=2 ,Name="Ahmed",Salary=1200 },
             new Person(){Id=4 ,Name="Mohamed",Salary=1400 },
             new Person(){Id=1 ,Name="Omnia",Salary=1300 },
             new Person(){Id=3 ,Name="Samy",Salary=1600 }

        };
    }
</head>
<body>
    <div>
        @*@{
            WebGrid grid = new WebGrid(persons);

        }
        @grid.GetHtml()*@



        @{
            var myChart = new Chart(width: 600, height: 400)
                .AddTitle("Chart Title")
                .AddSeries(
                    name: "Employee",
                    xValue: persons.Select(p => p.Name).ToArray(),
                    yValues: persons.Select(p => p.Salary).ToArray())
                .Write();
        }
        
       

    </div>
</body>
</html>
