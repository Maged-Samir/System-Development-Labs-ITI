@using TaskDaySeven.Models;
@{
    ViewBag.Title = "Edit";

    Car editedCar = ViewBag.selectedCar;
}

<h2>Edit</h2>

<form action="/Car/Edit" method="post">

    <div class="form-group">
        <label> Num </label>
        <input class="form-control" type="text" name="id" value="@editedCar.Id" />
    </div>
    <div class="form-group">
        <label> Model </label>
        <input class="form-control" type="text" name="Model" value="@editedCar.Model" />
    </div>
    <div class="form-group">
        <label> Color </label>
        <input class="form-control" type="text" name="Color" value="@editedCar.Color" />
    </div>
    <div class="form-group">
        <label> Manfacture </label>
        <input class="form-control" type="text" name="Manfacture" value="@editedCar.Manfacture" />
    </div>
   
    <div class="form-group">
        <input type="submit" value="Save" />
    </div>

</form>