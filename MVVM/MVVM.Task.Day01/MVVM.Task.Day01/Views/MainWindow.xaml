<Window x:Class="MVVM.Task.Day01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM.Task.Day01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Name:" />
            <TextBox Text="{Binding Path=Name, Mode=TwoWay}" />
            <Label Content="Age:" />
            <TextBox Text="{Binding Path=Age, Mode=TwoWay}" />
            <Button Content="Add User" Command="{Binding AddUserCommand}" />
        </StackPanel>
        <!--<ListBox Grid.Row="1" ItemsSource="{Binding Users}" DisplayMemberPath="Name" />-->
        <ListBox Grid.Row="1" ItemsSource="{Binding Users}" DisplayMemberPath="FullName" SelectedItem="{Binding SelectedUser}" />
    </Grid>

</Window>
